<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
                           http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

    <bean id="jsonProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>

    <jaxrs:server id="superGol" address="/">
        <jaxrs:serviceBeans>
            <ref bean="services.players" />
            <ref bean="services.teams" />
            <ref bean="services.tournies" />
        </jaxrs:serviceBeans>
        <jaxrs:extensionMappings>
            <entry key="json" value="application/json" />
        </jaxrs:extensionMappings>
        <jaxrs:providers>
            <ref bean="jsonProvider" />
        </jaxrs:providers>
        <jaxrs:features>
            <cxf:logging />
        </jaxrs:features>
    </jaxrs:server>

    <!-- beans de spring -->
    <bean id="services.teams" class="services.TeamsService">
        <property name="repository" ref="persistence.teams" />
    </bean>

    <bean id="services.players" class="services.PlayersService">
        <property name="repository" ref="persistence.players" />
    </bean>

    <bean id="services.tournies" class="services.TourniesService">
        <property name="repository" ref="persistence.tournies" />
    </bean>

    <bean id="persistence.teams" class="repositories.TeamsRepository" >
        <property name="sessionFactory" ref="persistence.sessionFactory" />
    </bean>

    <bean id="persistence.players" class="repositories.PlayersRepository" >
        <property name="sessionFactory" ref="persistence.sessionFactory" />
    </bean>

    <bean id="persistence.tournies" class="repositories.TourniesRepository" >
        <property name="sessionFactory" ref="persistence.sessionFactory" />
    </bean>

</beans>