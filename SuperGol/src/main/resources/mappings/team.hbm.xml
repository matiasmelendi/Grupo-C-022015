<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="save-update">
    <class name="model.Team">
        <id column="ID" name="id">
            <generator class="native" />
        </id>

        <property name="name" />

        <list name="matchResults" table="match_results_by_match">
            <key column="id" />
            <list-index column="match_id"/>
            <one-to-many class="model.MatchResult" />
        </list>

        <many-to-one name="creator" class="model.User" />
        <one-to-one name="formation" class="model.Formation" />
    </class>
</hibernate-mapping>