<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="save-update">
    <class name="model.Team" table="teams">
        <id column="ID" name="id"/>

        <property name="name" column="name"/>

        <list name="matchResults" table="match_results" lazy="false">
            <key column="team_id" />
            <list-index column="match_id"/>
            <one-to-many class="model.MatchResult" />
        </list>

        <one-to-one name="creator" class="model.User" fetch="join" lazy="false" property-ref="team"/>
        <one-to-one name="formation" class="model.Formation" fetch="join"/>
    </class>
</hibernate-mapping>