<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="save-update">
    <class name="model.Team">
        <id column="ID" name="id">
            <generator class="native" />
        </id>

        <property name="name" />
        <property name="isCaptain" />

        <map name="matchResults" table="match_results_by_match">
            <key column="match_results_by_match_id" />
            <map-key type="model.Match" column="match" />
            <element type="model.MatchResult" column="match_result"/>
        </map>

        <many-to-one name="creator" class="model.User" />
        <one-to-one name="formation" class="model.Formation" />
    </class>
</hibernate-mapping>