<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="save-update">

    <class name="model.User" table="users">
        <id column="ID" name="id"/>

        <property name="username" column="username"/>
        <property name="password" column="password"/>

        <list name="scores" table="tourney_scores">
            <key column="tourney_scores_id" />
            <list-index column="tourney_id" />
            <element type="java.lang.Integer" />
        </list>

        <one-to-one name="team" class="model.Team" />
    </class>
</hibernate-mapping>