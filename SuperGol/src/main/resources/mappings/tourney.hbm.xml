<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="save-update">
    <class name="model.Tourney" table="tournies">
        <id column="ID" name="id"/>

        <property name="name" column="name"/>
        <property name="minNumberOfTeams" column="min_number_of_teams"/>
        <property name="maxNumberOfTeams" column="max_number_of_teams"/>

        <list name="teams" table="tourney_teams">
            <key column="tourney_teams_id" />
            <list-index column="index" />
            <many-to-many column="team_id" class="model.Team"/>
        </list>
    </class>
</hibernate-mapping>